#!/usr/bin/env bash

function main {
  case "${1:-}" in
    bootstrap)
      local shome="$(unset CDPATH; cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
      "$shome/script/bootstrap"
      ;;
    "")
      true
      ;;
    *)
      echo "ERROR: command $1 unimplemented" 1>&2
      return 1
      ;;
  esac
}

if [[ -x "$(which sub 2>&- || true)" ]]; then
  source sub "$0" "$@"
else
  main "$@"
fi
