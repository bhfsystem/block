#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  local whome="$(cd -P -- "${BASH_SOURCE%/*}/../.." && pwd -P)"

  source "$shome/script/profile"
  
  local cmd_sub="$(which sub 2>&- || true)"
  if [[ ! -x "$cmd_sub" ]]; then
    if [[ ! -d "$ahome/sub" ]]; then
      git clone git@github.com:defn/sub "$ahome/sub"
    fi
  fi

  local cmd_jq="$(which jq 2>&- || true)"
  if [[ ! -x "$cmd_jq" ]]; then
    if [[ ! -d "$ahome/jq" ]]; then
      git clone git@github.com:defn/app-jq "$ahome/jq"
      (cd "$ahome/jq" && script/bootstrap)
    fi
  fi
}

bootstrap
