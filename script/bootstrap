#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  git submodule update --init --recursive
  source "$shome/script/profile"
  
  if [[ ! -x "$shome/vendor/jq/bin/jq" ]]; then
    (cd "$shome/vendor/jq" && script/bootstrap)
  fi
}

bootstrap
