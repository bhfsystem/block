#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile" ''
  
  block bootstrap "$@"

  local git_block
  for git_block in "$@"; do
    pushd "$BLOCK_PATH" >/dev/null
    git clone "$git_block" || true
    git fetch
    git reset --hard origin/master

    make

    require
    popd "$BLOCK_PATH" >/dev/null
  done
}

main "$@"
