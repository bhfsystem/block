#!/usr/bin/env bash

function silently {
  set +x; "$@"; set -x
}

function git_stuff {
  # initialize new ssh hosts
  rm -f ~/.ssh/known_hosts
  ssh -oStrictHostKeyChecking=no github.com true &
  ssh -oStrictHostKeyChecking=no bitbucket.org true &
  ssh -oStrictHostKeyChecking=no localhost true &
  wait
}

function bootstrap_block {
  block clone
  block runmany 8 'cd $1 && git pull' || true
  block bootstrap
  silently require
}

function home_stuff {
  local git_home="$1"; shift

  # clone home
  if [[ ! -d .git ]]; then
    git clone "$git_home" home
    mv home/.git . || rm -rf home/.git
    git reset --hard
    git clean -fd
  else
    git reset --hard
  fi
  
  git pull
  silently source script/ciprofile
  bootstrap_block
}

function block_stuff {
  : ${BLOCK_PATH:="$(pwd)/work"}
  export BLOCK_PATH

  # bootstrap block
  git clone git@github.com:defn/block "$BLOCK_PATH/block" || true
  pushd "$BLOCK_PATH/block"
  git pull
  silently source script/profile
  silently require
  bootstrap_block
  popd
}

function cache_stuff {
  # bootstrap cache
  git clone git@github.com:defn/cache "$BLOCK_PATH/cache" || true
  pushd "$BLOCK_PATH/cache"
  silently require
  bootstrap_block
  popd

  export BASEBOX_CACHE="/vagrant"

  case "$(uname -s)" in
    Linux)
      {
        echo "Acquire::Languages { \"en\"; };"
        echo "Acquire::http { Pipeline-Depth \"200\"; }"
      } | sudo tee /etc/apt/apt.conf.d/99boxcache

      if [[ -n "${http_proxy:-}" ]]; then
        {
          echo "Acquire::http::Proxy \"$http_proxy\";"
        } | sudo tee -a /etc/apt/apt.conf.d/99boxcache
      fi
      ;;
  esac
}

function update_stuff {
  case "$(uname -s)" in
    Linux)
      sudo aptitude upgrade -y || true
      ;;
    Darwin)
      sudo softwareupdate -i -v -a || true
      ;;
  esac

  facts cache
}

function main {
  # setup
  local nm_repo=

  if [[ "$#" == 0 ]]; then
    if [[ ! -d ".git" ]]; then
      echo "ERROR: specify a git repository to build" 1>&2
      return 1
    fi
  else
    nm_repo="$1"; shift
  fi

  if [[ -n "${1:-}" ]]; then
    export http_proxy="$1"; shift
    export https_proxy="$http_proxy"
    export ftp_proxy="$http_proxy"
  fi

  if [[ -n "${1:-}" ]]; then
    export ssh_gateway="$1"; shift
    ssh -oStrictHostKeyChecking=no "$ssh_gateway" true || true
  fi

  case "$(uname -s)" in
    Linux)
      sudo aptitude update
      sudo aptitude -y install git vim unzip curl language-pack-en lvm2 # mirror basebox-ubuntu/site.sh
      ;;
  esac

  # setup
  git_stuff
  block_stuff
  cache_stuff
  home_stuff "$nm_repo"
  update_stuff

  # cleanup
  case "$(uname -s)" in
    Linux)
      sudo rm -f /etc/apt/apt.conf.d/99boxcache
      ;;
  esac

  touch ~/.done
}

trap 'if [[ ! -f ~/.done ]]; then echo "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX[ NOT DONE ]XXXXXXXXXXXXXXXXXXXXXXXXX"; fi; rm -f ~/.done' EXIT
set -exfu
exec 2>&1
cd
main "$@"
